<Window x:Class="WpfBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfBinding"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox Name="Accueil" HorizontalAlignment="Center"  TextWrapping="Wrap" Text="{Binding Path=txtAccueil, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  VerticalAlignment="Center" FontSize="36" Grid.Row="1"/>
        <Button Content="Cliquez ici" HorizontalAlignment="Left" Margin="362,184.211,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" Grid.Row="2"/>

    </Grid>
</Window>
